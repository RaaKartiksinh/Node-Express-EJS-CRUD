<!-- Modal -->
<div class="modal fade" id="<%=id%>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="p-4">
        <form name="books" method="POST" action="/update/<%=_id%>">

          <input type="text" class="form-control my-2" name="name" placeholder="Enter Book Name.." value="<%= name %>"
            aria-label="name" aria-describedby="basic-addon1">

          <input type="number" class="form-control my-2" name="price" placeholder="Enter Book Price"
            value="<%= price %>" aria-label="price" aria-describedby="basic-addon1">

          <input type="text" class="form-control my-2" name="publisher" placeholder="Enter Book Publisher Name"
            value="<%= publisher %>" aria-label="publisher" aria-describedby="basic-addon1">

          <button type="submit" class="btn btn-primary">Save</button>
        </form>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>